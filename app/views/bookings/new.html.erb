<h1>Create a Booking</h1>
<p>Find me in app/views/bookings/new.html.erb</p>

<%= simple_form_for [@property, @booking] do |f| %>
  <div class="form-inputs">
      <%= f.input :check_in,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email" }%>
      <%= f.input :check_out,
                  required: true,
                  input_html: { autocomplete: "first name"}%>
      <%= f.input :guests,
                  required: true,
                  input_html: { autocomplete: "last name"}%>

  </div>
  <div class="form-actions">
      <%= f.button :submit, "Complete Booking" %>
  </div>
<% end %>
