<div style="width: 100%; height: 100%; background: #D9D9D9; display: flex;">
  <div style="width: 66%; padding: 20px;">
    <h1>Book this now</h1>
    <div class="container">
      <div id="property-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% if @property.photo.attached? %>
      <%= cl_image_tag(@property.photo.key, class: "d-block w-100") %>
    <% end %>
            <div class="carousel-caption left-caption">
              <% if @property.present? %>
                <div class="caption-box">
                  <h2 style="text-align: left;"><%= "$#{@property.price}" %></h2>
                  <div>
                    <h3 style="text-align: left;"><%= "#{@property.bedrooms} Bedroom" %></h3>
                    <p style="text-align: left;"><%= @property.address %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="carousel-item">
            <%= image_tag "02.webp", class: "d-block w-100" %>
            <div class="carousel-caption left-caption">
              <% if @property.present? %>
                <div class="caption-box">
                  <h2 style="text-align: left;"><%= "$#{@property.price}" %></h2>
                  <div>
                    <h3 style="text-align: left;"><%= "#{@property.bedrooms} Bedroom" %></h3>
                    <p style="text-align: left;"><%= @property.address %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Add additional carousel items for other images -->
        </div>
        <!-- Carousel controls -->
        <a class="carousel-control-prev" href="#property-carousel" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#property-carousel" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
    </div>
    <% if @property.present? %>
      <div class="description-box">
        <h2>Description</h2>
        <p><%= @property.description %></p>
      </div>
    <% end %>
  </div>
  <div style="width: 33%; padding: 20px;">
    <%= simple_form_for [@property, @booking] do |f| %>
      <div class="form-inputs">
        <%= f.input :check_in, required: true, autofocus: true, input_html: { autocomplete: "email" } %>
        <%= f.input :check_out, required: true, input_html: { autocomplete: "first name" } %>
        <%= f.input :guests, required: true, input_html: { autocomplete: "last name" } %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Complete Booking", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>

<style>
  .left-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    text-align: left;
    padding: 20px;
  }
  .caption-box {
    background-color: rgba(0, 0, 0, 0.5);
    padding: 10px;
    text-align: left;
    display: inline-block;
    border-radius: 10px;
  }
  .carousel-item {
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5); /* Add drop shadow */
  }
  .description-box {
    background-color: white;
    border-radius: 10px;
    padding: 20px;
    text-align: left;
    margin-top: 20px; /* Add margin to separate from carousel */
  }
</style>
