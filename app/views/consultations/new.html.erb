<h1>Consultations#new</h1>
<p>Find me in app/views/consultations/new.html.erb</p>
<div style="width: 100%; height: 100%; background: #D9D9D9; display: flex;">
  <div style="width: 66%; padding: 20px;">
    <h1>Book a consultation Now</h1>
    <div class="container">
      <div id="property-carousel" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <% if @property.photo.attached? %>
      <%= cl_image_tag(@property.photo.key, class: "d-block w-100") %>
    <% end %>
            <div class="carousel-caption left-caption">
              <% if @property.present? %>
                <div class="caption-box">
                  <h2 style="text-align: left;"><%= number_to_currency(@property.price) %></h2>
                  <div>
                    <h3 style="text-align: left;"><%= "#{@property.bedrooms} Bedroom" %></h3>
                    <p style="text-align: left;"><%= @property.address %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <div class="carousel-item">
            <%= image_tag "02.webp", class: "d-block w-100" %>
            <div class="carousel-caption left-caption">
              <% if @property.present? %>
                <div class="caption-box">
                  <h2 style="text-align: left;"><%= number_to_currency(@property.price) %></h2>
                  <div>
                    <h3 style="text-align: left;"><%= "#{@property.bedrooms} Bedroom" %></h3>
                    <p style="text-align: left;"><%= @property.address %></p>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
          <!-- Add additional carousel items for other images -->
        </div>
      </div>
    </div>
    <% if @property.present? %>
      <div class="description-box">
        <h2>Description</h2>
        <p><%= @property.description %></p>
      </div>
    <% end %>
  </div>
  <div style="width: 33%; padding: 20px;">
    <%= simple_form_for [@property, @consultation] do |f| %>
      <div class="form-inputs">
        <%= f.input :date, label: 'Consultation Time', required: true, autofocus: true %>

      </div>
      <div class="form-actions">
        <%= f.button :submit, "Make Booking", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
