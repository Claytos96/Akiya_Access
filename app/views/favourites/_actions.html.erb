<% favourite = property.favourited_by(current_user) %>
<% unless favourite %>
  <%= link_to property_favourites_path(property), data: { turbo_method: "post" }, class: "pin" do %>
    <i class="fa-regular fa-heart"></i>
  <% end %>
<% else %>
  <%= link_to favourite_path(favourite), data: { turbo_method: "delete" }, class: "pin" do %>
    <i class="fa-solid fa-heart"></i>
  <% end %>
<% end %>
