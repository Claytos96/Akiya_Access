<div class="row">

  <!-- Left Column with Search Bar and Property Cards -->
  <div class="col-7">
    <!-- Search Bar -->
   <%= form_with url: search_result_path, method: :get, class: "d-flex" do %>
        <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Type a keyword"
          %>
        <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
      <% end %>

    <div class="property-grid">

      <% if @properties.any? %>
        <% @properties.each do |property| %>
          <div class="card">
           <%= cl_image_tag(property.photo.key,
             width: 300, height: 200, crop: :fill) %>
            <ul>
              <li><%= link_to number_to_currency(property.price), new_property_booking_path(property) %></li>
              <li><%= "#{property.bedrooms} bedrooms" %></li>
              <li><%= property.address %></li>
            </ul>
          </div>
        <% end %>
      <% else %>
        <p>Sorry, no properties found.</p>
      <% end %>
    </div>
  </div>

  <!-- Right Column with Map -->
  <div class="col-5">
    <div id="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
