<h1>Consultation Page</h1>
<p>Find me in app/views/consultations/new.html.erb</p>
<div style="width: 100%; height: 100%; background: #D9D9D9; display: flex; justify-content: center; align-items: center;">
  <div style="width: 80%; padding: 20px; background: white; border-radius: 10px;">
    <div class="container">
      <div class="row">
        <div class="col-md-6">
          <div style="padding: 20px;">
            <%= simple_form_for [@property, @consultation] do |f| %>
              <div class="form-actions mt-3 mb-3">
                <button type="button" class="btn btn-secondary calendar-button">Calendly Integration + Timezone selection</button>
                <div>
                  <div class="input-group mb-3">
                    <div class="input-group mb-3">
                      <div>
                        <label for="email" class="form-label">Firstname</label>
                      </div>
                      <input type="text" class="form-control" placeholder="Firstname" aria-label="Firstname">
                      <div>
                        <label for="email" class="form-label">Lastname</label>
                      </div>
                      <input type="text" class="form-control" placeholder="Lastname" aria-label="Lastname">
                    </div>
                    <div class="input-group mb-3">
                      <div>
                        <label for="email" class="form-label">Email</label>
                      </div>
                      <span class="input-group-text" id="basic-addon1">@</span>
                      <input type="text" class="form-control" placeholder="email" id="email" aria-label="Email" aria-describedby="basic-addon1">
                    </div>
                    <div class="input-group">
                      <span class="input-group-text">Your message</span>
                      <textarea class="form-control" aria-label="Your message"></textarea>
                    </div>
                    <%= f.button :submit, "Send", class: "btn btn-primary" %>
                    <%= f.button :submit, "Online booking", class: "btn btn-primary" %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <% if @property.photo.attached? %>
            <%= cl_image_tag(@property.photo.key, class: "img-fluid rounded") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
