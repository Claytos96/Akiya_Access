<div class="row">
  <!-- Left Column with Property Cards -->
  <div class="col-6">
    <div class="property-grid">
      <% @properties.each do |property| %>
        <div class="card">
          <img src="https://via.placeholder.com/300x200" alt="Property Image">
          <ul>
            <li><%= link_to number_to_currency(property.price), new_property_booking_path(property) %></li>
            <li><%= "#{property.bedrooms} bedrooms" %></li>
            <li><%= property.address %></li>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Column with Map -->
  <div class="col-6">
    <div id="map"
      data-controller="map"
      data-map-markers-value="<%= @markers.to_json %>"
      data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
